# База данных PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ani_light_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ani_light_db

# Redis для кэширования
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT секретный ключ (ОБЯЗАТЕЛЬНО измените в продакшене!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# API настройки
ANILIBRIA_API_URL=https://anilibria.top/api/v1
PUBLIC_ANILIBRIA_URL=https://anilibria.top/
FRONTEND_URL=http://localhost:3000

# Настройки приложения
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Telegram Bot (опционально)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGARM_TEMP_TOKEN_TYPE=telegram_temp

# Дополнительные настройки безопасности (опционально)
# CORS_ORIGIN=http://localhost:3000
# RATE_LIMIT_TTL=60000
# RATE_LIMIT_MAX=100

# Мониторинг (опционально)
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000

# Docker настройки (если используете Docker)
# DOCKER_NETWORK=ani-light-network
