{
  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "tabWidth": 2,
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 80,
  "importOrder": [
    "^@nestjs/(.*)$",
    "^@?\\w",
    "^(@|@app|@src)/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "decorators-legacy"]
}